@model TarefaModel
@{
    ViewData["Title"] = "Cadastrar Tarefa";
}

<section id="criar-tarefa">
    <div class="text-center">
        <h3 class="display-6">Cadastrar Contato</h3>
    </div>
    <br />
    <div>
        <form asp-controller="Tarefa" asp-action="Criar" method="post">
            <div class="form-group">
                <label for="titulo" class="form-label">Descrição</label>
                <input type="text" asp-for="DescricaoResumo" class="form-control" placeholder="Digite a descrição">
                @Html.ValidationMessageFor(x => x.DescricaoResumo)
            </div>

            <div class="form-group">
                <label for="horaInicio" class="form-label">Hora Inicio</label>
                <input type="datetime-local" asp-for="HorarioInicio" class="form-control">
                @Html.ValidationMessageFor(x => x.HorarioInicio)
            </div>
            <div class="form-group">
                <label for="CNPJ" class="form-label">CNPJ da empresa</label>
                <input type="text" asp-for="CnpjEmpresa" class="form-control cnpj" data-parsley-maxlength="[18]">
                @Html.ValidationMessageFor(x => x.CnpjEmpresa)
            </div>

            <div class="form-group">
                <label for="tipoTarefa" class="form-label">Tipo de tarefa</label>
                <select asp-for="TipoTarefa" class="form-control">
                    <option value="0"> Selecione</option>
                    <option value="@TarefaModel.Tipo.Reunião"> Reunião</option>
                    <option value="@TarefaModel.Tipo.Contexto"> Quebra de contexto</option>
                    <option value="@TarefaModel.Tipo.Tarefa"> Tarefa</option>
                </select>
                @Html.ValidationMessageFor(x => x.TipoTarefa)
            </div>
            <br />
            <button type="submit" class="btn btn-success">Adicionar</button>
            <a class="btn btn-danger" role="button" asp-action="Index" asp-controller="Empresa">Cancelar</a>
        </form>
    </div>
</section>