@model EmpresaModel
@{
    ViewData["Title"] = "Alterar Cadastro";
}

<section id="editar-empresa">
    <div class="text-center">
        <h3 class="display-6">Alterando @Model.RazaoSocial</h3>
    </div>
    <br />
    <div>
        <form asp-controller="Empresa" asp-action="Atualizar" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="CNPJ" class="form-label">CNPJ</label>
                <input type="text" asp-for="Cnpj" disabled class="form-control cnpj" data-parsley-maxlength="[18]" placeholder="Digite o CNPJ">
                @Html.ValidationMessageFor(x => x.Cnpj)
            </div>

            <div class="form-group">
                <label for="RazaoSocial" class="form-label">Razão Social</label>
                <input type="text" asp-for="RazaoSocial" class="form-control razaoSocial" placeholder="Nome da empresa">
                @Html.ValidationMessageFor(x => x.RazaoSocial)
            </div>
            <br />
            <button type="submit" class="btn btn-success">Alterar</button>
            <a class="btn btn-danger" asp-controller="Empresa" asp-action="Index">Cancelar</a>
        </form>
    </div>
</section>