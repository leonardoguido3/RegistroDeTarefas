@model UsuarioModel
@{
    ViewData["Title"] = "Alterar Usuario";
}

<section id="editar-usuario">
    <div class="text-center">
        <h3 class="display-6">Alterando tarefa @Model.Nome</h3>
    </div>
    <br />
    <div>
        <form asp-controller="Usuario" asp-action="Atualizar" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
                @Html.ValidationMessageFor(x => x.Nome)
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <br />
            <button type="submit" class="btn btn-success">Alterar</button>
            <a class="btn btn-danger" asp-controller="Empresa" asp-action="Index">Cancelar</a>
        </form>
    </div>
</section>